<h1 class="text-center title">All Delta bloggers</h1>
<br>
<%= will_paginate(@users, :renderer => WillPaginate::ActionView::BootstrapLinkRenderer) %>

<div class="card-deck text-center">
  <% @users.each do |user| %>
    <div class="col-sm-4 text-center">
      <div class="card">

        <%= image_tag gravatar_for(user, 100), class:" rounded-circle image" %>
        <div class="card-body">
          <h5><%= link_to user.username , user_path(user), class:"card-title btn btn-info" %></h5>
          <p class="card-text">
            <small class="text-muted"><%= pluralize(user.articles.count, "article") %>
            </small>
          </p>
          <% if logged_in? && current_user.admin? %>
            <%= link_to '<button type="button" class="btn btn-sm btn-outline-danger">Delete User</button>'.html_safe,
                                        user_path(user), method: :delete,
                                        data: {confirm: "Are you sure to delete this user and his articles"} %>
          <% end %>
        </div>
      </div>

    </div>
  <% end %>
</div>
<br>
<%= will_paginate(@users, :renderer => WillPaginate::ActionView::BootstrapLinkRenderer) %>
