<% if obj.errors.any? %>
<div class="card border-danger mb-3 col-sm-6 offset-3" >
  <div  class= "card-text text-danger">
    <h3>
    <%= pluralize(obj.errors.count, "error") %> found:
    </h3>
    <ul>
    <% obj.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
  </div>
<% end %>
