<br>

<div class="row ">
  <div class="col-12 col-lg-8 offset-lg-2 col-md-8 offset-md-2 ">
        <div class="card border-0 text-center">
          <small>Created by:</small>
          <%= image_tag gravatar_for(@article.user, 100), class:" rounded-circle image" %>
          <div class="card-body">
            <h5><%= link_to @article.user.username , user_path(@article.user), class:"card-title btn btn-info"  %></h5>
            <p class="card-text"><small class="text-muted"><%= pluralize(@article.user.articles.count, "article") %></small></p>
          </div>
        </div>

    <div class="card text-center">
      <h5 class="card-header">Title: <%= @article.title %> </h5>
      <div class="body">
      <h6> Description: </h6>
      <%= simple_format(@article.description) %>
      <% if @article.categories.any? %>
      <p>Categories: <%= render @article.categories %></p>
      <% end %>
    </div>

      <div class="article-actions">
        <% if logged_in? && (current_user == @article.user || current_user.admin? )%>
        <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-sm btn-primary" %>
        <%= link_to 'Delete', article_path(@article), class: "btn btn-sm btn-danger",
                                 method: :delete, data: {confirm: "Are you sure?"} %>
        <% end %>
        <%= link_to 'View all articles', articles_path, class: "btn btn-sm btn-success" %>
      </div>
    </div>
  </div>
</div>
