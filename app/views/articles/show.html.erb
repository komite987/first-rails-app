<br>

<div class="row">
  <div class="col-sm-6 offset-3">
    <div class="card text-center">
      <h3 class="card-header">Title: <%= @article.title %> </h3>
      <h4> Description: </h4>
      <%= simple_format(@article.description) %>
      <div class="article-actions">
        <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-sm btn-primary" %>
        <%= link_to 'Delete', article_path(@article), class: "btn btn-sm btn-danger",
                                 method: :delete, data: {confirm: "Are you sure?"} %>
        <%= link_to 'View all articles', articles_path, class: "btn btn-sm btn-success" %>
      </div>
    </div>
  </div>
</div>
